@model MakonisApplication.Models.User
@{
    ViewData["Title"] = "Home Page";
}
<style>
    .bg-danger {
    background-color: #35a2dc!important;
}
</style>

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="text-uppercase text-center">User Form</h5>
            </div>
            <div class="card-body">
                <form asp-action="Index">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FirstName">First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <button id="Button" type="submit" name="submit" formmethod="post" class="btn btn-sm btn-success text-uppercase rounded-0">Submit</button>

                    @section Scripts{
                        <partial name="_ValidationScriptsPartial" />

                    }
                    @if (ViewBag.Message != null)
                    {
                        <script type="text/javascript">
                        window.onload = function () {
                            alert("@ViewBag.Message");
                        };
                        </script>
                    }
                </form>
            </div>
        </div>
    </div>
</div>
